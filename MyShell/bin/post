#!/bin/zsh
# Program :
#	粘贴一个文本文件或图片，并输出网址
#	详情：https://fars.ee
#         https://pb.nichi.co/
# History:
#	2018年 12月 17日 星期一 18:44:17 CST
# Usage:
#	post FILENAME
# Author: junyi

imgexts=('png' 'jpg')

file=$1
file_ext=$1:e
isIMG=0

for imgext in ${imgexts[*]}; do
	echo $imgext
	if [[ "$imgext" == "$file_ext" ]]; then
		isIMG=1
	fi
done

if [[ $isIMG == 1 ]]; then
	curl --data-binary @$1 https://pb.nichi.co/
else
	curl -F c=@- https://fars.ee/ < $1
fi
